@model List<Category>
@{
    ViewBag.Title = "CategoryList";
}

<h2>CategoryList</h2>
<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
             <tr>
                 <th>Kategori İsmi</th>
                 <th>Kategori Acıklaması</th>
                 <th colspan="2" style="text-align:center">Islemler</th>
             </tr>
            @foreach (Category item in Model)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td> @Html.ActionLink("Kategori Sil","DeleteCategory",new { id=item.ID},new { @class="btn btn-danger"})</td>
                    <td>@Html.ActionLink("Kategori Güncelle","UpdateCategory",new { id=item.ID},new { @class="btn btn-warning"})</td>

                </tr>
            }
        </table>
    </div>
</div>
