@model Product
@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm())
{
    <div>
        Ürün İsmi Giriniz
    </div>
    <div>
        @Html.TextBoxFor(x => x.ProductName)
    </div>

    <div>
        Ürün Fiyatını Giriniz
    </div>
    <div>
        @Html.TextBoxFor(x => x.UnitPrice)
    </div>

    <div>
        Ürün Stok Giriniz
    </div>
    <div>
        @Html.TextBoxFor(x => x.UnitsInStock)
    </div>

    <div>
        Kategori Seçiniz
    </div>
    <div>
        @Html.DropDownListFor(x=>x.CategoryID,new SelectList(ViewBag.KategoriListesi,"ID","CategoryName"),"Lütfen Seciniz")
    </div>


    <div>
        <button class="btn btn-primary"> Ürün Ekle </button>
    </div>
}

