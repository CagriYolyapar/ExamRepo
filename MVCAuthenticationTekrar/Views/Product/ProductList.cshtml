@model List<Product>
@{
    ViewBag.Title = "ProductList";
}

<h2>ProductList</h2>

@if (Model.Count < 1)
{
    <div class="jumbotron">
        Ekli ürün bulunmamaktadır. Ürün eklemek icin @Html.ActionLink("Tıklayınız", "AddProduct")
    </div>
}
else
{

    <div class="jumbotron">
        Ürün Listesi. Yeni ürün eklemek icin @Html.ActionLink("Tıklayınız", "AddProduct")
    </div>

    <table class="table table-hover">
        <tr>
            <th>Ürün İsmi</th>
            <th>Ürün Stok</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Kategorisi</th>
            <th colspan="2" style="text-align:center">İslemler</th>
        </tr>
        @foreach (Product item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitsInStock</td>
                <td>@item.UnitPrice</td>
                <td>@item.Category.CategoryName</td>
                <td>@Html.ActionLink("Ürün GÜncelle","UpdateProduct",new { id=item.ID},new {@class="btn btn-warning" })</td>
                <td>@Html.ActionLink("Ürün Sil","DeleteProduct",new { id=item.ID},new { @class="btn btn-danger"})</td>
            </tr>
        }
    </table>


}