@model List<Product>
@{
    ViewBag.Title = "ShoppingList";
}

@TempData["SiparisAlindi"]

@Html.ActionLink("Sepete Git", "CartPage", null, new { @class = "btn btn-primary" })

<div class="panel panel-primary">
    <div class="panel panel-body">
        <table class="table table-hover">
            <tr>
                <th>Urun İsmi</th>
                <th>Ürün Fiyatı</th>
                <th>Sepet İslemi</th>

            </tr>
            @foreach (Product item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@Html.ActionLink("Sepete Ekle", "AddToCart", new { id = item.ID }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </table>
    </div>
</div>