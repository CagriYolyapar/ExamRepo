@using MVCAuthenticationTekrar.Models.CustomTools
@model Cart
@{
    ViewBag.Title = "CartPage";
}

<h2>CartPage</h2>

<table class="table table-hover">
    <tr>
        <th>Ürün İsmi</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Adedi</th>
        <th>Ürün Toplam Fiyatı</th>
    </tr>
    @foreach (CartItem item in Model.Sepetim)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>@item.Price</td>
            <td>
                @item.Amount

            </td>
            <td>@item.SubTotal</td>
        </tr>

    }
</table>

<span>
    Odemeniz gereken toplam tutar => @Model.TotalPrice
</span>

@Html.ActionLink("Siparis onayla","ConfirmOrder")