@model AppUser
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
             @using (Html.BeginForm("Login","Home",FormMethod.Post))
             {
                 <div>
                     Kullanıcı İsmi
                 </div>
                 <div>
                     @Html.TextBoxFor(x=>x.UserName)
                 </div>
                 <div>
                     Sifre
                 </div>
                 <div>
                     @Html.TextBoxFor(x=>x.Password)
                 </div>
                 <div>
                     <button>Giriş Yap</button>
                 </div>
             }
        </div>
    </div>
</div>
